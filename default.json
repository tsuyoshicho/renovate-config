{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    "github>hatena/renovate-config:schedule",
    "github>hatena/renovate-config:automergePin",
    "github>hatena/renovate-config:automergeTypesMinor"
  ],
  "semanticCommits": "enabled",
  "labels": [
    "renovate"
  ],
  "npm": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "rangeStrategy": "replace",
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
