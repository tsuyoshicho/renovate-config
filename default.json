{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekend"
  ],
  "semanticCommits": "enabled",
  "labels": [
    "renovate"
  ],
  "npm": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "rangeStrategy": "replace",
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
